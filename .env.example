APP_NAME=Melichinkul
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8001

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# PostgreSQL (host Ubuntu: host.docker.internal desde contenedor)
DB_CONNECTION=pgsql
DB_HOST=host.docker.internal
DB_PORT=5432
DB_DATABASE=melichinkul_db
DB_USERNAME=admin
DB_PASSWORD=  # Contraseña de PostgreSQL; configurar según tu entorno (no subir valores reales)

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local

# Laravel Reverb (WebSockets para notificaciones en tiempo real)
REVERB_APP_ID=melichinkul
REVERB_APP_KEY=local-key
REVERB_APP_SECRET=local-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Frontend (Vite): el navegador se conecta a Reverb en el puerto expuesto (8002)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT=8002
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

QUEUE_CONNECTION=redis
CACHE_STORE=redis

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail y alertas por email (Mailpit en Docker: http://localhost:8025)
# Con docker compose: MAIL_HOST=mailpit. Sin Docker: usar log o smtp real.
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@melichinkul.local"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_ENCRYPTION=null

# Umbral (CLP): si costo total > este valor, el mantenimiento queda pendiente de aprobación
# MAINTENANCE_APPROVAL_THRESHOLD=500000

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
